<resources>
    <!-- Base application theme. -->
    <style name="Base.TechHub" parent="Theme.Material3.DayNight.NoActionBar">
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TechHub.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TechHub.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TechHub.LargeComponent
        </item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.TechHub.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TechHub.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.TechHub.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.TechHub.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.TechHub.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.TechHub.Headline6</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.TechHub.HeadlineSmall</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TechHub.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.TechHub.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TechHub.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TechHub.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.TechHub.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TechHub.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.TechHub.Overline</item>

        <!--Platform attributes-->
        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:statusBarColor">@color/black</item>

        <!--Default styles-->
        <item name="colorPrimary">@color/tech_deep_orange</item>
        <item name="colorOnPrimary">@color/tech_matte_black</item>
        <item name="bottomNavigationStyle">@style/Widget.TechHub.BottomNavigationView</item>
    </style>


    <style name="TechHub" parent="@style/Base.TechHub" />

    <style name="TechHub.Orange">
        <item name="colorPrimary">@color/tech_deep_orange</item>
        <item name="colorOnPrimary">@color/tech_matte_black</item>
        <item name="colorPrimaryVariant">@color/tech_blue_800</item>
        <item name="colorSecondary">@color/tech_yellow_500</item>
        <item name="colorSecondaryVariant">@color/tech_pink_600</item>
        <item name="colorSecondaryContainer">@color/tech_prussian_blue_dark</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="ThemeOverlay.TechHub.Orange.Dark" parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/tech_deep_orange</item>
        <item name="colorPrimaryVariant">@color/tech_blue_800</item>
        <item name="colorSecondary">@color/tech_yellow_500</item>
        <item name="colorSecondaryVariant">@color/tech_yellow_400</item>
        <item name="colorOnPrimary">#fff</item>
    </style>

    <style name="TechHub.Orange.Alternate">
        <item name="colorPrimary">@color/tech_deep_orange</item>
        <item name="colorPrimaryVariant">@color/tech_blue_800</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/tech_pink_600</item>
        <item name="colorPrimaryContainer">@color/grey_400</item>
    </style>

    <style name="TechHub.Blue" parent="@style/ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/tech_blue_700</item>
        <item name="colorPrimaryVariant">@color/tech_blue_700</item>
        <item name="colorSecondary">@color/tech_yellow_500</item>
        <item name="colorSecondaryVariant">@color/tech_yellow_400</item>
        <item name="colorOnPrimary">#fff</item>
    </style>

    <style name="TechHub.Blue.Deep" parent="@style/ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/tech_blue_800</item>
        <item name="colorPrimaryVariant">@color/tech_blue_800</item>
        <item name="colorSecondary">@color/tech_yellow_200</item>
        <item name="colorSecondaryVariant">@color/tech_yellow_400</item>
        <item name="colorOnPrimary">#fff</item>
    </style>

    <style name="TechHub.Light">
        <item name="colorPrimary">@color/tech_anti_flash_white</item>
        <item name="colorPrimaryVariant">@color/tech_anti_flash_white</item>
        <item name="colorPrimarySurface">@color/tech_anti_flash_white</item>
        <item name="colorOnPrimary">@color/tech_matte_black</item>
        <item name="colorSecondary">@color/tech_deep_orange</item>
        <item name="colorSecondaryVariant">@color/tech_matte_black</item>
        <item name="colorPrimaryContainer">@color/grey_400</item>
        <item name="transitionShapeAppearance">@style/ShapeAppearance.TechHub.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.TechHub.TransitionShapeAppearance.Small" parent="">
        <item name="transitionShapeAppearance">@style/ShapeAppearance.TechHub.SmallComponent</item>
    </style>

</resources>
